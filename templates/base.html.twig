            {# <script src="script.js" </script> #}

        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <link rel="shortcut icon" type="images/png" href="images/favicon.png"/>
    <body>
        {% block header %}
            <header class=grille>
                <aside>
                    <a href="{{path("home")}}"><img src="../images/logo.jpg" alt="logo"/></a>
                </aside>
                <aside>
                    </br>
                    <h1>Homme à tout faire </h1>    
                    <h2>Résidentiel et commercial </h2>          
                    <br />                               
                </aside>
                <aside>
                    {% if app.user %}
                        <a class="btn btn-primary" style="background-color: #005e9e;" href="{{ path('app_logout') }}">Fermer la session</a></br></br>
                    {% else %}
                        <a class="btn btn-primary" style="background-color: #005e9e;" href="{{path("app_login")}}">Portail employé</a></br></br>
                    {% endif %}
                    <button type="button" class="btn text-light" style="background-color: #005e9e;">819-919-7888</button>
                </aside>
            </header>


        {% endblock %}

        {# {% block navbar %}{% include "navbar.html.twig" %}{% endblock %} #}
        {% block navbar %}
            <nav class="navbar navbar-expand-lg navbar-light text-light" style="background-color: #005e9e;">
            <div class="container-fluid ">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav justify-content-center">
                    <li class="nav-item">
                    <a class="nav-link active text-light" aria-current="page" href="{{path("home")}}">ACCUEIL</a>
                    </li>  
                    <li class="nav-item">
                    <a class="nav-link text-light" href="home_services">GALERIE</a>
                    </li>
                    {#<li class="nav-item">
                    <a class="nav-link text-light" href="/home_services">SERVICES OFFERTS</a>
                    </li>#}
                    <li class="nav-item">
                    <a class="nav-link text-light" href="/form_nouvelle_demande_de_service">CONTACTER</a>
                    </li>
                    {% if app.user %}
                    <li class="nav-item">
                    <a class="nav-link text-light" href="/home_employes">ADMINISTRATION</a>
                    </li>
                    {% else %}
                    {% endif %}
                </ul>
                </div>
            </div>
            </nav>
        {% endblock %}

        {% block body %}{% endblock %}
        
        {% block footer %}
            <footer class=grille>
                <aside>
                    <img style="margin-right: 20px" src="../images/argent.png" alt="argent" /> 
                    <img style="margin-right: 20px" src="../images/credit.png" alt="credit" />
                    <img style="margin-right: 20px" src="../images/cheque.png" alt="cheque" />
                    <img src="../images/interac.png" alt="interac" />
                </aside>
                <aside>
                </br> </br>
                    <em>Copyright</em> 2021<strong></strong> </br>
                    <p>Entreprise de service <span>Turbos S </span></p>                 
                    <br />                               
                </aside>
                <aside>
                    <a href="https://www.facebook.com/profile.php?id=100057565894398" target="_blank" ><img class="zoom" src="../images/facebook.png" alt="facebook"/></a>
                </aside>
            </footer>
        
        {% endblock %}
    </body>
