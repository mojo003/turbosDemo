{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}
{% form_theme registrationForm 'bootstrap_5_layout.html.twig' %}
{% block body %}
<div class="formEmploye">
    <h1>Entrez le mot de passe pour l'employé</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword.first, {
            label: 'Mot de passe',
        }) }}
        {{ form_row(registrationForm.plainPassword.second, {
            label: 'Répétez le mot de passe',
        }) }}
        {{ form_row(registrationForm.roles, {
            label: 'Rôle',
        }) }}

        <button type="submit" class="btn btn-lg btn-primary button_form_employe">Envoyer</button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
