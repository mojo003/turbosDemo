{% extends 'base.html.twig' %}

{% block title %}DemandeDeService index{% endblock %}

{% block body %}
    <h1>DemandeDeService index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdDemandeService</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Adresse</th>
                <th>Telephone</th>
                <th>Courriel</th>
                <th>Description</th>
                <th>DateHeure</th>
                <th>Statut</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for demande_de_service in demande_de_services %}
            <tr>
                <td>{{ demande_de_service.idDemandeService }}</td>
                <td>{{ demande_de_service.nom }}</td>
                <td>{{ demande_de_service.prenom }}</td>
                <td>{{ demande_de_service.adresse }}</td>
                <td>{{ demande_de_service.telephone }}</td>
                <td>{{ demande_de_service.courriel }}</td>
                <td>{{ demande_de_service.description }}</td>
                <td>{{ demande_de_service.dateHeure ? demande_de_service.dateHeure|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ demande_de_service.statut ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('demande_de_service_show', {'idDemandeService': demande_de_service.idDemandeService}) }}">show</a>
                    <a href="{{ path('demande_de_service_edit', {'idDemandeService': demande_de_service.idDemandeService}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('demande_de_service_new') }}">Create new</a>
{% endblock %}
