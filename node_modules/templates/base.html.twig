
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
            <link href="{{ asset('css/style.css') }}" rel="stylesheet">
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        {% block header %}
            <header class=grille>
                <aside>
                    <a href="{{path("home")}}"><img src="images/logo.jpg" alt="logo"/></a>
                </aside>
                <aside>
                    </br>
                    <h1>Homme à tout faire </h1>    
                    <h2>Résidentiel et commercial </h2>          
                    <br />                               
                </aside>
                <aside>
                    <button type="button" class="btn btn-dark">Portal employé</button> </br></br>
                    <button type="button" class="btn text-light" style="background-color: #005e9e;">819-919-7888</button>
                </aside>
            </header>
        {% endblock %}

        {# {% block navbar %}{% include "navbar.html.twig" %}{% endblock %} #}
        {% block navbar %}
            <nav class="navbar navbar-expand-lg navbar-light text-light" style="background-color: #005e9e;">
            <div class="container-fluid ">
                <a class="navbar-brand text-light" href="{{path("home")}}">TURBO S</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav justify-content-center">
                    <li class="nav-item">
                    <a class="nav-link active text-light" aria-current="page" href="{{path("home")}}">ACCUEIL</a>
                    </li>  
                    <li class="nav-item">
                    <a class="nav-link text-light" href="#">GALERIE</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link text-light" href="/service">SERVICES</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link text-light" href="#">TÉMOINIAGES</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link text-light" href="/demande/de/service">CONTACT</a>
                    </li>
                </ul>
                </div>
            </div>
            </nav>
        {% endblock %}

        {% block body %}{% endblock %}
        
        {% block footer %}
            <footer class=grille>
                <aside>
                    <img src="images/argent.png" alt="argent" /> 
                    <img src="images/credit.png" alt="credit" />
                    <img src="images/cheque.png" alt="cheque" />
                    <img src="images/interac.png" alt="interac" />
                </aside>
                <aside>
                </br> </br>
                    <em>Copyright</em> 2021<strong></strong> </br>
                    <p>Entreprise de service <span>Turbos S </span></p>                 
                    <br />                               
                </aside>
                <aside>
                    <a href="https://www.facebook.com/" target="https://www.facebook.com/profile.php?id=100057565894398" ><img class="zoom" src="images/facebook.png" alt="facebook"/></a>
                </aside>
            </footer>
        
        {% endblock %}
    </body>
</html>
